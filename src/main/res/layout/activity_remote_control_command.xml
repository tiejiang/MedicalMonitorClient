<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.medicalmonitor.ui.activity.RemoteControlCommandActivity">


    <LinearLayout
        android:id="@+id/line1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/dis_week_tiwen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="一周体温数据"/>

            <Button
                android:id="@+id/dis_week_pulse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="一周脉搏数据" />
        </LinearLayout>


        <com.example.medicalmonitor.ui.drawer.LineGraphicView
            android:id="@+id/line_graphic"
            android:layout_width="wrap_content"
            android:layout_height="400dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="实时健康数据"/>

        <View
            android:layout_width="10dp"
            android:layout_height="20dp"/>
        <LinearLayout
            android:id="@+id/line2"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="body temperature:"/>
            <View
                android:layout_width="10dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tempe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="data"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/line3"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/pu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="pulse: "/>
            <View
                android:layout_width="10dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/pulse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="data"/>
        </LinearLayout>

